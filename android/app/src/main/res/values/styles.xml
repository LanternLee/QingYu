<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:listDivider">@drawable/divide_item</item>
    </style>

    <style name="login_btn">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="login_block">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="login_title">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="header_text_main">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="header_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="item_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="operation_block">
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/login_block</item>
        <item name="android:layout_height">230dp</item>
    </style>



    <style name="lock_secret">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/Amber200</item>
    </style>

    <style name="secret_label">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/Amber700</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
